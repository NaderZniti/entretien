                    </li>
                     <li class="nav-item {% if page== 'offre'%}active{% endif %}">
                        <a class="nav-link" href="{{path('admin_hotel')}}">
                            <i class="nc-icon nc-badge"></i>
                            <p>Offre</p>
                        </a>
                    </li>
                    {% endif %}
                    <li class="nav-item {% if page== 'salaries'%}active{% endif %}">
                        <a class="nav-link" href="{{path('admin_hotel')}}">
                            <i class="nc-icon nc-badge"></i>
                            <p>hotel</p>
                        </a>
                    </li>
                    <li class="nav-item {% if page== 'candidat_accepter'%}active{% endif %}">
                        <a class="nav-link" href="#">
                            <i class="nc-icon nc-badge"></i>
                            <p>hotelier</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        {% endif %}
        {% if route_name != "app_login" %}
        <div class="main-panel" {% if page== 'modifyClient'%}style="width: calc(100% - 75px);"{% endif %}>
