{% extends 'base.html.twig' %}

{% block title %}update{% endblock %}

{% block body %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">hotel</h4>
                    </div>
                    <div class="card-body">
                        <form action="{{path('add_check_hotel')}}" method="POST">
                            <div class="row">
                                <div class="col-md-12 pl-3">
                                    <div class="form-group">
                                        <label>Nom*</label>
                                        <input type="text" class="form-control" name="nom" placeholder="hotel nom"  required>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-12 pl-3">
                                    <div class="form-group">
                                        <label>Adresse</label>
                                        <input type="text" class="form-control" name="adresse" placeholder="hotel adresse" required>
                                    </div>
                                </div>
                            </div>
                            <a href="{{path('admin_hotel')}}" class="btn btn-info btn-fill pull-left">Annuler</a>
                            <button type="submit" class="btn btn-success btn-fill pull-left ml-2">add</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}